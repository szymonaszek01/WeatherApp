<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/ic_custom_tab_background"
    tools:context=".fragment.WeeklyFragment">

    <TextView
        android:id="@+id/textViewDaily"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageViewWeeklyWeather"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:contentDescription="weather"
        android:paddingBottom="30sp" />

    <LinearLayout
        android:id="@+id/weeklyContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/weeklyTabTemp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:layout_gravity="center"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPrimaryWeeklyTabTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Temp"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewSecondaryWeeklyTabTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabPressure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="top">

            <TextView
                android:id="@+id/textViewPrimaryWeeklyTabPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Pressure"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewSecondaryWeeklyTabPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabWeeklyWind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="top">

            <TextView
                android:id="@+id/textViewPrimaryWeeklyTabWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Wind"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewSecondaryWeeklyTabWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabHumidity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="top">

            <TextView
                android:id="@+id/textViewPrimaryWeeklyTabHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Humidity"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewSecondaryWeeklyTabHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>